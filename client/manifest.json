/* File: manifest.json
 * -------------------
 * A manifest file (like this one) is used to
 * give Chrome information about your extension.
 *
 * You shouldn't need to change anything in this file
 * unless you're doing extensions.
 *
 * For more details, check out the documentation:
 * https://developer.chrome.com/extensions/manifest
 */

{
  "manifest_version": 2,
  "name": "Adtune",
  "version": "0.0.1",

  "description": "Computer Music for the Big Ads Era",
  "icons": {
    "16": "icons/TreeHacks-white-16.png",
    "32": "icons/TreeHacks-white-32.png",
    "48": "icons/TreeHacks-white-48.png",
    "64": "icons/TreeHacks-white-64.png",
    "96": "icons/TreeHacks-white-96.png",
    "128": "icons/TreeHacks-white-128.png"
  },

  "homepage_url": "https://github.com/michaelsvolos/adtune",

  "permissions": [
    "http://104.40.74.37:5000/create_music/"
  ],

  "browser_action": {
    "default_icon": "icons/TreeHacks-white-19.png",
    "default_title": "Adtune",
    "default_popup": "src/popup.html"
  },
  "content_scripts": [{
    "matches": [
      "*://*/*"
    ],
    "js": [
      "/src/jquery-3.3.1.js", "/src/content.js"
    ]
  }],
  "background": {
    "scripts": ["/src/jquery-3.3.1.js", "/src/background.js"],
    "persistent": false
  }
}
